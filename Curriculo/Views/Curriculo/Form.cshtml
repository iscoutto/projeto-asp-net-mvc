    </div>

    <button type="submit">Salvar</button>
</form>

<script>
    // seleciona o elemento do textarea
    const textarea = document.querySelector('#idiomas');

    // define o atributo readonly
    textarea.setAttribute('readonly', true);


    function salvarSelecionados() {
        var radioSelecionado = document.querySelector('input[name="habilidade"]:checked').value;
        var textoIdioma = document.querySelector('input[name="idioma"]').value;
        var campoTexto = document.getElementById('idiomas');

        campoTexto.value += textoIdioma + ' ';
        campoTexto.value += 'Conhecimento: ' + radioSelecionado + ';\n';

    }
    function limparIdiomaSelecionado() {
        var campoTexto = document.getElementById('idiomas');
        campoTexto.value = '';
    }

    //Expandir Recolher Informações Pessoais
    function pessoalExpandirRecolher() {

