                <label><input type="radio" name="habilidade" value="Avançado">Avançado</label>
            </div>

            <div class="form-group">
                <button type="button" onclick="salvarSelecionados()">Salvar Idioma</button>
                <button type="button" onclick="limparIdiomaSelecionado()">Limpar Idiomas</button>
            </div>

            <div class="form-group">
                <label>Idiomas:</label>
                <textarea id="idiomas" name="idiomas" rows="4" cols="5" style="resize:none;">@Model.Idiomas</textarea>
            </div>

