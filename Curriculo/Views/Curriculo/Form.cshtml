@model CurriculoViewModel
@{
    ViewData["Title"] = "Form";
}

<form action="Salvar" method="post">
    <h1 class="h1" style="text-align:center;">Formulário de Currículo</h1>

    <!-- Inicio Seção Pessoal>-->

    <h2>Informações Pessoais</h2>

    <center>
        <button id="expandir-recolher-pessoal" onclick="pessoalExpandirRecolher()" class="btn btn-outline-primary">Preencher Informações Pessoais</button>
        <br />
        <span class="badge text-info">Cliquei no botão acima para Expandir o Formulário</span>
    </center>

    <div id="pessoal-expandir-recolher">

        <div class="form-group">
            <input type="hidden" name="Operacao" value="@ViewBag.Operacao" />
            <label for="Cpf">CPF</label>
            @if (ViewBag.Operacao == "I")
            {
                <input type="number" Name="Cpf" value="@Model.Cpf" />
            }
            else
            {
                <input type="number" Name="Cpf" value="@Model.Cpf" disabled" readonly />
            }
        </div>

        <div class="form-group">
            <label for="nome">Nome completo*</label>
            <input type="text" id="nome" name="nome" required value="@Model.Nome">
        </div>

        <div class="form-group">
            <label for="Data_nascimento" class="control-label">Data de Nascimento</label>
            @if (ViewBag.Operacao == "I")
            {
                <input type="date" Name="Data_nascimento" value="@DateTime.Now class="form-control" />
            }
            else
            {
                <input type="date" Name="Data_nascimento" value="@Model.Data_nascimento.ToString("yyyy-MM-dd")" class="form-control" />
            }
        </div>

        <div class="form-group">
            <label for="endereco">Endereço*</label>
            <input type="text" id="endereco" name="endereco" value="@Model.Endereco" required>
        </div>

        <div class="form-group">
            <label for="email">E-mail*</label>
            <input type="email" id="email" name="email" value="@Model.Email" required>
        </div>

        <div class="form-group">
            <label for="telefone">Telefone*</label>
            <input type="tel" id="telefone" name="telefone" value="@Model.Telefone" required>
        </div>

        <div class="form-group">
            <label for="linkedin">LinkedIn</label>
            <input type="text" id="linkedin" name="linkedin" value="@Model.Linkedin">
        </div>

        <center>
            <button id="expandir-recolher-acadPro1" onclick="acadProExpandirRecolher1(),pessoalExpandirRecolher()" class="buttonSS">Manter Salvo / Adicionar Formação</button>
            <br />
            <span class="badge text-info">Cliquei no botão acima manter formulário o salvo e seção minimizada.</span>
            <span class="badge text-info">Irá Expandir a Seção de Formação Acadêmica.</span>
        </center>

