<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - N2B1_Curriculo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <style>
        body {
            padding-top: 10rem;
            padding-bottom: calc(10rem - 4.5rem);
            background: linear-gradient(to bottom, rgba(92, 77, 66, 0.8) 0%, rgba(92, 77, 66, 0.8) 100%), url("../img/fundo.jpg");
            background-position: center;
            background-repeat: no-repeat;
            background-attachment: scroll;
            background-size: cover;
        }

        form {
            max-width: 600px;
            margin: 0 auto;
            background-color: #fff;
            padding: 40px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
        }

        h2 {
            text-align: center;
            font-size: 24px;
            margin-bottom: 30px;
            color: #333;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            font-size: 18px;
            color: #333;
            margin-bottom: 10px;
        }

        input[type="text"],
        input[type="email"],
        input[type="tel"],
        input[type="url"],
        input[type="number"],
        input[type="date"],
        textarea {
            width: 100%;
            padding: 12px;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
            font-size: 16px;
            color: #333;
        }

        textarea {
            resize: vertical;
        }

        button[type="submit"] {
            background-color: #00bcd4;
            color: #fff;
            padding: 12px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            font-size: 18px;
            transition: all 0.3s ease;
        }

            button[type="submit"]:hover {
                background-color: #008ba3;
            }

        .language {
            display: flex;
            align-items: center;
            margin-bottom: 10px;
        }

        .language-select {
            margin-right: 10px;
        }

        .language-skills {
            display: flex;
            margin-left: 10px;
        }

        .remove-language-btn {
            margin-left: 10px;
        }

        .formacao, pessoal {
            border-style: solid;
            border-width: 0.5px;
            border-color: #d3d3d3;
            padding: 10px;
            border-radius: 10px;
        }

        .buttonAA {
            border-radius: 10px;
            color: white;
            padding: 6px 14px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 2px 2px;
            transition-duration: 0.4s;
            cursor: pointer;
        }
        .buttonAA {
            background-color: white;
            color: black;
            border: 2px solid #555555;
        }

            .buttonAA:hover {
                background-color: #555555;
                color: white;
            }

        .buttonSS {
            border-radius: 10px;
            color: white;
            padding: 6px 14px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 2px 2px;
            transition-duration: 0.4s;
            cursor: pointer;
        }

        .buttonSS {
            background-color: white;
            color: green;
            border: 2px solid green;
        }

            .buttonSS:hover {
                background-color: green;
                color: white;
            }

        label input[type="radio"] {
            display: inline;
            vertical-align: middle;
        }

        #acadPro-expandir-recolher1, #acadPro-expandir-recolher2, #acadPro-expandir-recolher3,
        #acadPro-expandir-recolher4, #acadPro-expandir-recolher5, #pro-expandir-recolher1, #pro-expandir-recolher2,
        #pro-expandir-recolher3 {
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.2s ease-out;
        }

            #acadPro-expandir-recolher1.expandida, #acadPro-expandir-recolher2.expandida, #acadPro-expandir-recolher3.expandida,
            #acadPro-expandir-recolher4.expandida, #acadPro-expandir-recolher5.expandida, #pro-expandir-recolher1.expandida,
            #pro-expandir-recolher2.expandida, #pro-expandir-recolher3.expandida {
                max-height: 2000px;
                transition: max-height 0.5s ease-in-out;
            }

        #conhecimento-expandir-recolher.expandida, #pessoal-expandir-recolher.expandida {
            max-height: 1000px;
            transition: max-height 0.5s ease-in-out;
        }

        #pessoal-expandir-recolher, #conhecimento-expandir-recolher {
            max-height: 0;
            overflow: hidden;
            transition: max-height 0.2s ease-out;
        }

    </style>
</head>
<body>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - N2B1_Curriculo - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
